<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Service"
        xmlns:MySqlClient="clr-namespace:MySql.Data.MySqlClient;assembly=MySql.Data" x:Class="Service.MainWindow"
        mc:Ignorable="d"
        Title="ServiceApp" Height="450" Width="800" Loaded="Window_Loaded" MinWidth="800" MinHeight="450" Closed="Window_Closed">
    <Grid>
        <Button x:Name="ReturnButton" Content="Выйти из аккаунта" Panel.ZIndex="1" Width="130" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,2,0" Click="ReturnButton_Click"/>
        <TabControl x:Name="MainTabs">
            <TabItem x:Name="EmployeesReport" Header="Отчет по сотрудникам">
                <Grid Background="#FFE5E5E5" Margin="0">
                    <DataGrid x:Name="DataGridEmpRep" Margin="10,10,150,10" MinWidth="600" MinHeight="350" IsReadOnly="True"/>
                </Grid>
            </TabItem>
        </TabControl>



    </Grid>
</Window>
